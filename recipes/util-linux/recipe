version=2.28.1
release=1
sources=("https://www.kernel.org/pub/linux/utils/util-linux/v${version%.*}/util-linux-${version}.tar.xz")
sha1sum=('3e894c4b76a5b10a83a60dece16ab83670dcbaa7')
