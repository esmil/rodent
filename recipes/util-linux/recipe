config-util-linux-all() {
  description='Miscellaneous system utilities for Linux'
  depends=()
  mandepends=("util-linux-man=$version-$release")

  for i in "${_libc[@]}"; do
    depends+=("$i=$version-$release")
    mandepends+=("$i-man=$version-$release")
  done
  for i in "${_librt[@]}"; do
    depends+=("$i=$version-$release")
    mandepends+=("$i-man=$version-$release")
  done
  for i in "${_libsmartcols[@]}"; do
    depends+=("$i=$version-$release")
    mandepends+=("$i-man=$version-$release")
  done
  for i in "${_libblkid[@]}"; do
    depends+=("$i=$version-$release")
    mandepends+=("$i-man=$version-$release")
  done
  for i in "${_libmount[@]}"; do
    depends+=("$i=$version-$release")
    mandepends+=("$i-man=$version-$release")
  done
  for i in "${_libncurses[@]}"; do
    depends+=("$i=$version-$release")
    mandepends+=("$i-man=$version-$release")
  done
  for i in "${_libpam_misc[@]}"; do
    depends+=("$i=$version-$release")
    mandepends+=("$i-man=$version-$release")
  done
  for i in "${_manual[@]}"; do
    depends+=("$i=$version-$release")
    mandepends+=("$i-man=$version-$release")
  done
}

build() {
  cd util-linux-$version

  ./configure \
    --host=$host \
    --prefix=/usr \
    --libdir=/usr/lib \
    --bindir=/usr/bin \
    --sbindir=/usr/sbin \
    --localstatedir=/run \
    --enable-fs-paths-default=/usr/bin \
    --enable-libmount-force-mountinfo \
    --enable-usrdir-path \
    --disable-nls \
    --disable-rpath \
    --with-btrfs \
    --with-systemd \
    --with-readline \
    --with-gnu-ld \
    --without-selinux \
    --without-audit \
    --without-python \
    --with-sysroot="$SYSROOT"

  patch -Np1 -i "$srcdir/libtool.patch" libtool
  make DESTDIR="$pkgdir"
}

package() {
  cd util-linux-$version
  unset MAKEFLAGS
  make DESTDIR="$pkgdir" install

  mv "$pkgdir"/usr/sbin/* "$pkgdir/usr/bin"
  rmdir "$pkgdir"/usr/sbin

  rm -r "$pkgdir/usr/share/doc"
  rm "$pkgdir"/usr/lib/*.la
}

