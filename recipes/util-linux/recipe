config-libuuid() {
  description='uuid library from util-linux'
  depends=('libc')
  devdepends=('glibc-devel' "libuuid=$version-$release")
  files=('usr/lib/libuuid.so.*')
  devfiles=(
    'usr/include/uuid/uuid.h'
    'usr/lib/libuuid.so'
    'usr/lib/libuuid.a'
    'usr/lib/pkgconfig/uuid.pc'
  )
  devmanfiles=('usr/share/man/man3/uuid*.3')
}

